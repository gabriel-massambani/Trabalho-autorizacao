@model Biblioteca.Models.Livro

@{
    ViewData["Title"] = "Criar Livro";
}

<h1>Criar Livro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <span>:</span>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Editora" class="control-label"></label>
                <span>:</span>
                <input asp-for="Editora" class="form-control" />
                <span asp-validation-for="Editora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ano de Publicação:</label>
                <input asp-for="AnoPublicacao" class="form-control" />
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resumo" class="control-label"></label>
                <span>:</span>
                <input asp-for="Resumo" class="form-control" />
                <span asp-validation-for="Resumo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Autor:</label>
                <select asp-for="fk_AutorID" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Autores, "AutorID", "Nome"))">
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Gênero:</label>
                <select asp-for="fk_GeneroID" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Generos, "GeneroID", "Nome"))">
                </select>
            </div>
            <div class="form-group" style="padding-top: 10px">
                <input type="submit" value="Inserir" class="btn btn-primary btn-sm" />
                <a class="btn btn-secondary text-white btn-sm" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
