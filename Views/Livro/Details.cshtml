@model Biblioteca.Models.Livro

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Livro</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Editora):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Editora)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnoPublicacao):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnoPublicacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resumo):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resumo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Autor):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero.Nome)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model?.LivroID">Editar</a>
    <a class="btn btn-secondary text-white btn-sm" asp-action="Index">Voltar</a>
</div>

