    ViewData["Title"] = "Details";
}

<h1>Detalhes do Genero</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstiloNarrativo):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstiloNarrativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicoAlvo):
