@model Biblioteca.Models.Emprestimo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Empréstimo</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Livro.Titulo):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Livro.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEmprestimo):
        </dt>
        <dd class="col-sm-10">
            @Html.TextBoxFor(model => model.DataEmprestimo, "{0:d MMM yyyy}", new {@disable="true"})
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDevolucao):
        </dt>
        <dd class="col-sm-10">
            @Html.TextBoxFor(model => model.DataDevolucao, "{0:d MMM yyyy}", new {@disable="true"})
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model?.EmprestimoID">Editar</a>
    <a class="btn btn-secondary text-white btn-sm" asp-action="Index">Voltar</a>
</div>

